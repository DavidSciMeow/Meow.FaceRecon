<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <IsPublishable>True</IsPublishable>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugType>portable</DebugType>
    <SignAssembly>False</SignAssembly>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>Electronicute.Meow.FaceRecon</PackageId>
    <Company>Electronicute</Company>
    <Product>ArcsoftFaceSDK</Product>
    <Copyright>@2022 Electronicute</Copyright>
    <RepositoryType>git</RepositoryType>
    <PackageTags>FaceRecognition,FaceDetctor,Arcsoft</PackageTags>
    <NeutralLanguage>zh</NeutralLanguage>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    <Description>Arcsoft FaceDetector V3 C# Warpper and Util</Description>
    <PackageProjectUrl>https://github.com/DavidSciMeow/Meow.FaceRecon</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/DavidSciMeow/Meow.FaceRecon</RepositoryUrl>
    <Authors>DavidSciMeow</Authors>
    <Version>3.0.0</Version>
    <AssemblyVersion></AssemblyVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SkiaSharp" Version="2.88.0-preview.256" />
    <PackageReference Include="SkiaSharp.NativeAssets.Linux.NoDependencies" Version="2.88.0-preview.256" />
    <PackageReference Include="SkiaSharp.NativeAssets.Win32" Version="2.88.0-preview.256" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
